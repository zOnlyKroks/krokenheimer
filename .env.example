# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
BOT_OWNERS=your_discord_user_id

# LLM Plugin Configuration
# Enable/disable automatic message generation
LLM_ENABLED=true

# Message generation interval (in minutes)
# Bot will post between MIN and MAX randomly
LLM_MIN_INTERVAL_MINUTES=60
LLM_MAX_INTERVAL_MINUTES=180

# Channel scanning interval (in minutes)
# Bot will scan all channels for new messages every N minutes
LLM_SCAN_INTERVAL_MINUTES=2

# Channel filtering (optional)
# Only post in these channels (comma-separated channel IDs)
# LLM_CHANNEL_IDS=123456789,987654321

# Exclude these channels (comma-separated channel IDs)
# LLM_EXCLUDE_CHANNEL_IDS=111111111,222222222

# Ollama LLM Settings
# Available models: llama3.2:3b, llama3.2:8b, mistral:7b
OLLAMA_MODEL=llama3.2:3b

# Temperature controls randomness (0.0 = deterministic, 1.0 = very creative)
OLLAMA_TEMPERATURE=0.9

# Maximum length of generated messages (in tokens, roughly 4 chars per token)
OLLAMA_MAX_TOKENS=200

# Context window size
OLLAMA_CONTEXT_WINDOW=2048

# Remote Training API Configuration (Client-Initiated Training)
# Remote Windows machines connect to this bot via REST API to perform training
# Training is initiated by remote clients, not by this bot

# Enable/disable the remote training REST API
REMOTE_API_ENABLED=true

# Port for the remote training API (clients connect to this port)
REMOTE_API_PORT=3000

# Authentication token for remote clients (change this!)
REMOTE_API_TOKEN=your_secure_auth_token_here

# Enable/disable API authentication (recommended: true)
REMOTE_API_AUTH=true

# Training Policy Configuration
# Minimum number of new messages required before training is recommended
REMOTE_TRAINING_MIN_MESSAGES=1000

# Minimum hours between training sessions
REMOTE_TRAINING_INTERVAL_HOURS=12

# Maximum concurrent remote training clients
REMOTE_TRAINING_MAX_CLIENTS=1

# Default training epochs for remote clients
REMOTE_TRAINING_DEFAULT_EPOCHS=10

# Model name/version management
REMOTE_TRAINING_MODEL_NAME=krokenheimer

# GPU Recommendations for Remote Clients
# These are recommendations sent to clients, not enforced
REMOTE_TRAINING_RECOMMEND_GPU=true
# Options: rocm (AMD RX 5700 XT), directml (Windows DirectML), cpu
REMOTE_TRAINING_PREFERRED_GPU=rocm

# Logging and Monitoring
REMOTE_TRAINING_LOG=true
REMOTE_TRAINING_NOTIFY=true

# ================================================================
# Discord Bot Configuration for Remote Training
# Put these values in your main Discord bot's .env file
# ================================================================

# Basic Discord Bot Settings
BOT_TOKEN=your_discord_bot_token_here
BOT_OWNERS=your_discord_user_id

# LLM Plugin Settings
LLM_ENABLED=true
LLM_MIN_INTERVAL_MINUTES=60
LLM_MAX_INTERVAL_MINUTES=180
LLM_SCAN_INTERVAL_MINUTES=2

# ================================================================
# REMOTE TRAINING API SETTINGS (Required for Windows client)
# ================================================================

# Enable the REST API for remote Windows clients
REMOTE_API_ENABLED=true

# Port that Windows machines will connect to
# Make sure this port is open on your network
REMOTE_API_PORT=3000

# Security token - CHANGE THIS to something secure!
# Windows client must use the same token
REMOTE_API_TOKEN=kroken-secure-token-change-me-12345

# Enable authentication (recommended)
REMOTE_API_AUTH=true

# ================================================================
# TRAINING POLICY SETTINGS
# ================================================================

# Minimum new messages before training is recommended
REMOTE_TRAINING_MIN_MESSAGES=1000

# Minimum hours between training sessions
REMOTE_TRAINING_INTERVAL_HOURS=12

# Maximum number of Windows clients that can train simultaneously
REMOTE_TRAINING_MAX_CLIENTS=1

# Default training epochs for Windows clients
REMOTE_TRAINING_DEFAULT_EPOCHS=10

# Model name/version management
REMOTE_TRAINING_MODEL_NAME=krokenheimer

# ================================================================
# GPU RECOMMENDATIONS (Sent to Windows clients)
# ================================================================

# Recommend GPU usage to Windows clients
REMOTE_TRAINING_RECOMMEND_GPU=true

# Preferred GPU type for RX 5700 XT
# Options: rocm (best for RX 5700 XT), directml (Windows fallback), cpu
REMOTE_TRAINING_PREFERRED_GPU=rocm

# ================================================================
# LOGGING AND MONITORING
# ================================================================

# Log remote training activity
REMOTE_TRAINING_LOG=true

# Send completion notifications
REMOTE_TRAINING_NOTIFY=true
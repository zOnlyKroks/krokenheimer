{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
  "rootDir": "./src",
  "outDir": "./dist",
  "module": "nodenext",
  "target": "esnext",
  "lib": ["esnext"],
  "types": ["node"],
  "sourceMap": true,
  "declaration": true,
  "declarationMap": true,
  "strict": true,
  "jsx": "react-jsx",
  "verbatimModuleSyntax": true,
  "isolatedModules": true,
  "noUncheckedSideEffectImports": true,
  "moduleDetection": "force",
  "skipLibCheck": true,
  "allowImportingTsExtensions": true,
  "noEmit": false
}
  }
